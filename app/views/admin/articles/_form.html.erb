<%= simple_form_for [:admin, article] do |f| %>
  <div class="row">
    <div class="col-md-8">
      <%= f.input :title %>
      <%= f.input :content, as: :summernote %>
    </div>
    <div class="col-md-4">
      <%= f.input :published_at, html5: true %>
      <%= f.input :pinned %>
    </div>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
