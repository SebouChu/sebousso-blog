<%= content_for :title, 'Users' %>

<div class="container">
  <h1>Users</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Infos</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.full_name, [:admin, user] %></td>
          <td><%= link_to user.email, "mailto:#{user.email}" %></td>
          <td>
            <span class="badge badge-primary"><%= user.role.humanize %></span><br>
            <small><%= user.articles_count %> articles</small>
          </td>
          <td>
            <%= link_to 'Destroy',
                        [:admin, user],
                        method: :delete,
                        data: { confirm: 'Are you sure?' },
                        class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>