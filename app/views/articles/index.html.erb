<%= content_for :title, 'Articles' %>

<div class="container">
  <h1>Articles</h1>

  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title mb-0"><%= article %></h5>
            <p class="text-muted">
              <small><%= article.author %> | <%= l article.published_at.to_date, format: :long %></small>
            </p>
            <p class="card-text"><%= article.excerpt %></p>
            <%= link_to 'Read more', article, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>